<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <link rel="preload" href="/assets/fonts/inter-regular.woff2" as="font" type="font/woff2" crossorigin="">
    {% set css %}
    {% include "critical.css" %}
    {% endset %}
    <style>
      {{css | cssmin | safe}}
    </style>
    <meta name="description" content="{{ description or metadata.description }}">
    <meta name="generator" content="{{ eleventy.generator }}">
    <link rel="stylesheet" href="{{ '/assets/css/index.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/rss+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <link href="{{ '/assets/img/owl-light.png' | url }}" rel="icon" media="(prefers-color-scheme: light)"/>
    <link href="{{ '/assets/img/owl-dark.png' | url }}" rel="icon" media="(prefers-color-scheme: dark)"/>
  </head>
  <body>
    {% include "components/header.njk" %}

    <main class="wrapper {% if templateClass %}{{ templateClass }}{% endif %}">
      {{ content | safe }}
    </main>

    {% include "components/footer.njk" %}
  </body>
</html>
