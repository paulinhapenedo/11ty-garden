<header class="header">
  <h1 class="logo">
    <a href="{{ '/' | url }}" aria-label="Homepage">
      {% include "components/logo.njk" %}
    </a>
  </h1>
  <nav class="nav">
    <ul role="list" class="nav-list">
      {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
          <a class="nav-link" href="{{ entry.url | url }}">{{ entry.title }}</a>
        </li>
      {%- endfor %}
      <li class="nav-item">
        <a class="nav-link" href="{{ metadata.feed.path | url }}">RSS Feed</a>
      </li>
    </ul>
  </nav>
</header>